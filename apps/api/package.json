{
  "name": "@fluxsolutions/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "predev": "npm run prisma:generate",
    "dev": "tsx watch src/index.ts",
    "build": "npm run prisma:generate && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "eslint src test --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run test/e2e",
    "prisma:generate": "node ./scripts/prisma-runner.mjs generate",
    "prisma:migrate:dev": "node ./scripts/prisma-runner.mjs migrate dev",
    "prisma:migrate:deploy": "node ./scripts/prisma-runner.mjs migrate deploy",
    "prisma:studio": "node ./scripts/prisma-runner.mjs studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@aws-sdk/s3-request-presigner": "^3.750.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.0",
    "@fastify/rate-limit": "^10.2.1",
    "@fastify/sensible": "^6.0.3",
    "@prisma/client": "^6.3.1",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "file-type": "^20.4.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "nodemailer": "^6.10.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3",
    "zod": "^3.24.1",
    "@fluxsolutions/shared": "1.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.8",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "prisma": "^6.3.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "vitest": "^3.0.5"
  }
}
